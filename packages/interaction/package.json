{
  "name": "@sheet/interaction",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "test": "vitest run",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@sheet/core": "workspace:*",
    "@sheet/renderer": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.6.2",
    "eslint": "^9.12.0",
    "vitest": "^2.1.9"
  }
}
